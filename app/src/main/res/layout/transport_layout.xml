<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="400dp"
    android:layout_height="330dp"
    android:layout_marginTop="20dp"
    android:layout_marginRight="5dp"
    android:layout_marginLeft="5dp"
    android:layout_marginBottom="5dp"
    app:cardCornerRadius="5dp"
    app:cardElevation="5dp"
    android:id="@+id/places_layout">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="3dp">

            <TextView
                android:id="@+id/transport_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Indigo Airlines"
                android:textSize="20sp"
                android:textColor="@color/teal_700"
                android:layout_marginStart="5dp"
                android:fontFamily="sans-serif-black"/>

            <TextView
                android:id="@+id/transport_type"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_marginRight="10dp"
                android:fontFamily="sans-serif-black"
                android:text="Flight"
                android:textSize="20sp" />

        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:layout_marginTop="10dp">

            <androidx.cardview.widget.CardView
                android:layout_width="160dp"
                android:layout_height="match_parent"
                android:layout_marginStart="5dp"
                android:id="@+id/from_cardview">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <ImageView
                        android:id="@+id/from_image"
                        android:layout_width="match_parent"
                        android:layout_height="80dp"
                        android:src="@drawable/ic_launcher_background"
                        android:scaleType="centerCrop"/>

                    <TextView
                        android:id="@+id/from_name"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Ahmedabad"
                        android:textSize="25sp"
                        android:textColor="@color/black"
                        android:fontFamily="sans-serif-black"
                        android:layout_marginStart="10dp"
                        android:textAlignment="textStart" />

                    <TextView
                        android:id="@+id/from_time"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="16:00"
                        android:textSize="20sp"
                        android:textColor="@color/black"
                        android:fontFamily="sans-serif-black"
                        android:layout_marginStart="10dp"
                        android:textAlignment="textStart" />

                    <TextView
                        android:id="@+id/from_airport"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="15sp"
                        android:text="Sardar Vallabhbhai Patel International Airport"
                        android:textColor="@color/black"
                        android:fontFamily="sans-serif"
                        android:layout_marginStart="10dp"
                        android:textAlignment="textStart" />

                </LinearLayout>

            </androidx.cardview.widget.CardView>

            <ImageView
                android:id="@+id/type_image"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_marginLeft="15dp"
                android:layout_marginTop="50dp"
                android:layout_toRightOf="@+id/from_cardview"
                android:scaleType="centerCrop"
                android:src="@drawable/ic_baseline_flight_takeoff_24" />

            <androidx.cardview.widget.CardView
                android:layout_width="160dp"
                android:layout_height="match_parent"
                android:layout_marginEnd="5dp"
                android:layout_alignParentRight="true">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <ImageView
                        android:id="@+id/to_image"
                        android:layout_width="match_parent"
                        android:layout_height="80dp"
                        android:src="@drawable/ic_launcher_background"
                        android:scaleType="centerCrop"/>

                    <TextView
                        android:id="@+id/to_name"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Lucknow"
                        android:textSize="25sp"
                        android:textColor="@color/black"
                        android:fontFamily="sans-serif-black"
                        android:layout_marginStart="10dp"
                        android:textAlignment="textStart" />

                    <TextView
                        android:id="@+id/to_time"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="20:08"
                        android:textSize="20sp"
                        android:textColor="@color/black"
                        android:fontFamily="sans-serif-black"
                        android:layout_marginStart="10dp"
                        android:textAlignment="textStart" />

                    <TextView
                        android:id="@+id/to_airport"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="15sp"
                        android:text="Chaudhary Charan Singh International Airport"
                        android:textColor="@color/black"
                        android:fontFamily="sans-serif"
                        android:layout_marginStart="10dp"
                        android:textAlignment="textStart" />

                </LinearLayout>

            </androidx.cardview.widget.CardView>

        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="3dp">

            <TextView
                android:id="@+id/departure_date"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="23 Jan 2022"
                android:textSize="20sp"
                android:fontFamily="sans-serif-black"
                android:layout_marginLeft="10dp"/>

            <TextView
                android:id="@+id/price"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:fontFamily="sans-serif-black"
                android:text="â‚¹ 5000"
                android:textColor="@color/teal_700"
                android:textSize="20sp"
                android:layout_marginRight="10dp"/>

        </RelativeLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/transport_detail"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Details"
                android:textAllCaps="false"
                android:layout_weight="1"/>

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/transport_book"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Book Now"
                android:textAllCaps="false"
                android:layout_weight="1"/>


        </LinearLayout>

    </LinearLayout>

</androidx.cardview.widget.CardView>

